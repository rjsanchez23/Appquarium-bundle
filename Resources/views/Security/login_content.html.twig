{% trans_default_domain 'FOSUserBundle' %}
{% block content %}
    {% block fos_user_content %}
        <div class="aquarium-background"></div>
        <div class="loginBlock" id="fos_user_registration_form">
            <h1>{{ 'form.login_header'|trans }}</h1>
            <div class="dr"><span></span></div>
            <form action="{{ path("fos_user_security_check") }}" method="POST" role="form" class="form-horizontal">
                {% if error %}
                    <div class="alert alert-danger text-center fade in">
                        <button class="close" data-dismiss="alert" type="button">Ã—</button>
                        <p class="text-center><strong">{{ error.messageKey|trans(error.messageData, 'security') }}</strong></p>
                    </div>
                {% endif %}
                <div class="form-group">
                    <div class="input-group">
                        <input class="form-control" id="username" name="_username" placeholder="{{ 'security.login.username_email'|trans }}" required="required" type="text" value="{{ last_username }}">
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group">
                        <input class="form-control" id="password" name="_password" placeholder="{{ 'security.login.password'|trans }}" required="required" type="password">
                    </div>
                </div>
                <div class="form-group">
                    <label class="text-muted">
                        <input id="remember_me" name="_remember_me" type="checkbox" value="on"> {{ 'security.login.remember_me'|trans }}
                    </label>
                </div>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                <div class="row">
                    <div class="col-md-12">
                        <button class="btn btn-lg btn-primary btn-block" id="_submit" name="_submit" type="submit">{{ 'security.login.submit'|trans }}</button>
                    </div>
                </div>
            </form>
            <div class="dr"><span></span></div>
            <div class="controls">
                <div class="row">
                    <div class="col-md-6">
                        <a class="btn btn-link btn-block" href="{{ path('fos_user_resetting_request') }}">{{ 'form.forgot_password_tooltip'|trans }}</a>
                    </div>
                    <div class="col-md-6">
                        <a class="btn btn-link btn-block" href="{{ path('fos_user_registration_register') }}">{{ 'form.registration_tooltip'|trans }}</a>
                    </div>
                </div>
            </div>
        </div>
    {% endblock fos_user_content %}
{% endblock %}