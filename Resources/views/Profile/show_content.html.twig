{% trans_default_domain 'FOSUserBundle' %}
{% block content %}
    {% block fos_user_content %}
        <div class="content">
        <div class="breadLine">
            <ul class="breadcrumb">
                <li><a href="/aquarium/dashboard">Dashboard</a> <span class="divider">></span></li>
                <li class="active">Perfil</li>
            </ul>
        </div>
        <div class="workplace">
            <div class="wrapper">
                <div class="page-header">
                    <h1>{{ 'title.profile'|trans }}</h1>
                </div>
                <div class="workplace">
                    <div class="row">
                        <div class="col-md-8 col-md-offset-2">
                                <div class="col-md-3">
                                    <img src="{{ asset('assets/dashboard/img/uploads/userAvatar/' ~ app.user.avatar) }}" class="img-thumbnail img-responsive col-md-12" width="100" height="100">
                                </div>
                                <div class="col-md-9">
                                    <div class="block-fluid ucard">
                                        <div class="info">
                                            <ul class="rows">
                                                <li class="heading">User info</li>
                                                <li>
                                                    <div class="title">{{ 'profile.show.username'|trans }}</div>
                                                    <div class="text">{{ user.username }}</div>
                                                </li>
                                                <li>
                                                    <div class="title">{{ 'profile.show.name'|trans }}</div>
                                                    <div class="text">{{ user.name }}</div>
                                                </li>
                                                <li>
                                                    <div class="title">{{ 'profile.show.surname'|trans }}</div>
                                                    <div class="text">{{ user.surname }}</div>
                                                </li>
                                                <li>
                                                    <div class="title">{{ 'profile.show.email'|trans }}</div>
                                                    <div class="text">{{ user.email }}</div>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        </div>
    {% endblock %}
{% endblock %}